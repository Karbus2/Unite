                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.ActionLink("Add", "Add", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Profile", "Profile", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
