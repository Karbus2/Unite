@model Unite.Models.EventRating

@{
    ViewData["Title"] = "Oceń wydarzeniee";
}

<h1>Oceń wydarzenie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Rate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" class="form-control" value="@ViewData["EventId"]" />
            <input type="hidden" asp-for="AdminId" class="form-control" value="@ViewData["AdminId"]">
            <input type="hidden" asp-for="ReviewerId" class="form-control" value="@ViewData["ReviewerId"]" />
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" min="0" max="5" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label>
                <input asp-for="Review" class="form-control" />
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oceń" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="HistoryEvents" asp-route-id="@ViewData["EventId"]">Powrót do wydarzenia</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
